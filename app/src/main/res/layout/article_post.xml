<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    tools:context=".BuyerCart"
    >


    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/bg2"
                        android:src="@drawable/of"
               >

                    </ImageView>



            <LinearLayout
                android:layout_marginLeft="1dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="100dp"
                android:background="@drawable/bg_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ImportantUses of Organic farming"
                    android:textSize="24sp"
                    android:fontFamily="@font/mediumitalic"
                    android:layout_marginLeft="16dp"
                    android:textColor="#ffffff"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="2dp"
                    android:text="-by Satyasai"
                    android:textSize="24sp"
                   android:layout_gravity="end"
                    android:fontFamily="@font/medium"
                  >
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:textSize="24sp"
                android:background="#f0f0f0"
                android:text="    This is my first which has no content.Please forgive me if you expected something.This is my first which has no content.Please forgive me if you expected something.This is my first which has no content.Please forgive me if you expected something.This is my first which has no content.Please forgive me if you expected something.">

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>




