<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivitySeller"
    android:background="@drawable/loginbg"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/login"
            android:fontFamily="@font/bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:paddingLeft="120dp"/>

        <View
            android:layout_below="@id/login"
            android:id="@+id/line"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#75FFFFFF" />
        <View
            android:layout_below="@id/login"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="120dp"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText
                android:textColor="#ffffff"
                android:id="@+id/register_seller_name"
                android:layout_width="331dp"
                android:layout_height="52dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_shape"
                android:fontFamily="@font/regular"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColorHint="#DAC0C0"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText
                android:textColor="#ffffff"
                android:id="@+id/register_seller_email"
                android:layout_width="331dp"
                android:layout_height="52dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_shape"
                android:fontFamily="@font/regular"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:textColorHint="#DAC0C0"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText
                android:textColor="#ffffff"
                android:id="@+id/register_seller_pass"
                android:layout_width="331dp"
                android:layout_height="52dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_shape"
                android:fontFamily="@font/regular"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textColorHint="#DAC0C0"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText
                android:textColor="#ffffff"
                android:id="@+id/register_seller_phone"
                android:layout_width="331dp"
                android:layout_height="52dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_shape"
                android:fontFamily="@font/regular"
                android:hint="Phone Number"
                android:inputType="text|number"
                android:paddingLeft="30dp"
                android:textColorHint="#DAC0C0"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <EditText
                android:textColor="#ffffff"
                android:id="@+id/register_seller_address"
                android:layout_width="331dp"
                android:layout_height="92dp"
                android:layout_centerInParent="true"
                android:background="@drawable/login_shape"
                android:fontFamily="@font/regular"
                android:hint="Home Address"
                android:inputType="textMultiLine"
                android:paddingLeft="30dp"
                android:textColorHint="#DAC0C0"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/register_seller_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Register Seller"
                android:fontFamily="@font/bold"
                android:textSize="20sp"
                android:background="@drawable/login_shape_change"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:textColor="#FDF5F2"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>